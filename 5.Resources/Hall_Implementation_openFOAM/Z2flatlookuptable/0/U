FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (400 0 0);

boundaryField
{
    inlet
    {
        type            swirlInletVelocity;
        axis            (1 0 0);
        origin          (0 0 0);
        axialVelocity   constant 400;
        radialVelocity  constant 0;
        tangentialVelocity   constant 0;
        value           uniform (400 0 0);
    }
    outlet
    {
        type            zeroGradient;
        // type            inletOutlet;
        // inletValue      uniform (0 0 0);
        // value           uniform (0 0 0);
    }
    side1
    {
        type            cyclicAMI;
        value           uniform (0 0 0);
    }
    side2
    {
        type            cyclicAMI;
        value           uniform (0 0 0);
    }
    walls
    {
        type            slip;
    }
}


